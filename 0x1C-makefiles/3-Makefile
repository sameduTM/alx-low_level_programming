# -*- MakeFile -*-

#target: dependencies
#	action

CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school
RM=rm *

all: $(NAME)

clean:
	rm -f $(NAME) *.swp

oclean:
	rm -f $(OBJ)

fclean:
	rm -f *.swp $(NAME) $(OBJ)

re: clean all

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) -c -o $@ $<

.PHONY: all clean oclean fclean re
